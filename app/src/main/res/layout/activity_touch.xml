<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.kuxuan.mycanander.TouchActivity">

    <example.com.kuxuan.mycanander.widget.TouchPullView
        android:id="@+id/touchPull"
        app:pContentDrawableMargin="4dp"
        app:pDragHeight="120dp"
        app:pColor="@color/colorAccent"
        app:pRadius="20dp"
        app:pTangentAngle="110"
        app:pTargetGravityHeight="4dp"
        app:pTargetWidth="200dp"
        app:pContentDrawable="@drawable/ic_draw_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <example.com.kuxuan.mycanander.widget.TextBezier
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />

</LinearLayout>
